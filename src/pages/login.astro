---
// This is now a standalone page. NO BaseLayout.
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - TechBridge Academy</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="icon" href="/img/0.png" type="image/png">
    <style>
        body { background-color: var(--color-light-bg, #F8F9FA); display: flex; align-items: center; justify-content: center; min-height: 100vh; font-family: var(--font-primary, sans-serif); }
        .login-card { max-width: 420px; width: 100%; margin: 20px; padding: 2.5rem; background-color: var(--color-white, #fff); border-radius: var(--border-radius, 24px); box-shadow: var(--shadow, 0 10px 30px -5px rgba(0,0,0,0.1)); text-align: center; }
        .login-logo { width: 60px; height: 60px; margin: 0 auto 1rem; }
        .login-card h2 { color: var(--color-primary, #161B45); margin-bottom: 2rem; }
        .form-group { margin-bottom: 1.5rem; text-align: left; }
        .form-group label { display: block; font-weight: 600; margin-bottom: 0.5rem; }
        .form-group input { width: 100%; padding: 12px 16px; border-radius: 12px; border: 1px solid var(--color-border, #EAEAF2); }
        .form-button { width: 100%; padding: 14px; border: none; border-radius: 12px; background-color: var(--color-primary, #161B45); color: var(--color-white, #fff); font-weight: 600; font-size: 1rem; cursor: pointer; transition: background-color var(--transition, 0.3s); }
        .form-button:hover { background-color: var(--color-secondary, #28317E); }
        .form-status { margin-top: 1rem; font-weight: 600; text-align: center; }
        .form-link { text-align: center; margin-top: 1.5rem; }
        .form-link a { color: var(--color-accent, #469BD1); font-weight: 600; }
    </style>
</head>
<body>
    <div class="login-card">
        <img src="/img/0.png" alt="TechBridge Logo" class="login-logo">
        <h2>Log In to Your Account</h2>
        <form id="login-form">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" required />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" required />
            </div>
            <button type="submit" class="form-button">Log In</button>
            <p id="form-status" class="form-status"></p>
            <p class="form-link">
                Don't have an account? <a href="/signup">Sign up</a>
            </p>
        </form>
    </div>

    <script>
        import { supabase } from '../supabaseClient.js';

        const loginForm = document.getElementById('login-form');
        const statusEl = document.getElementById('form-status');

        loginForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            statusEl.textContent = 'Logging in...';
            statusEl.style.color = 'var(--color-text)';

            const { data, error } = await supabase.auth.signInWithPassword({
                email: email,
                password: password,
            });

            if (error) {
                statusEl.style.color = '#e55649'; // Error red
                if (error.message.includes('Invalid login credentials')) {
                    statusEl.innerHTML = 'Invalid credentials. <br> If you just paid, please <a href="/signup">Sign Up</a> using the same email.';
                } else {
                    statusEl.textContent = error.message;
                }
            } else {
                statusEl.textContent = 'Success! Redirecting...';
                statusEl.style.color = '#28a745'; // Success green
                // Send user to their dashboard
                window.location.href = '/my-courses/dashboard'; 
            }
        });
    </script>
</body>
</html>