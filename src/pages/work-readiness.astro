---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Work-Readiness Program">
    <style>
        /* All styles from your previous file are here */
        .program-header {
            text-align: center;
            max-width: 800px;
            margin: 0 auto 3rem auto;
        }
        .program-header h1 {
            color: var(--color-primary);
            font-size: clamp(2.5rem, 5vw, 3.5rem);
        }
        .section-block { margin-top: 4rem; }
        .section-block h2 { font-size: 2.25rem; color: var(--color-primary); margin-bottom: 2rem; text-align: center; }
        .how-it-works-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 2rem; text-align: center; }
        .how-it-works-grid .step { background: #fff; padding: 2.5rem 2rem; border-radius: 12px; box-shadow: var(--shadow); border: 1px solid var(--color-border); }
        .how-it-works-grid .step-icon { font-size: 3rem; line-height: 1; font-weight: 700; color: var(--color-accent); }
        .how-it-works-grid h3 { color: var(--color-secondary); margin: 1rem 0; }
        .track-card { background: #fff; border-radius: 12px; box-shadow: var(--shadow); padding: 2rem; border: 1px solid var(--color-border); }
        .track-card h3 { color: var(--color-primary); margin-top: 0; border-bottom: 2px solid var(--color-accent); padding-bottom: 0.5rem; display: inline-block; }
        .project-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 2rem; }
        .project-card { background: #fff; border: 1px solid var(--color-border); border-radius: 12px; padding: 2rem; display: flex; flex-direction: column; box-shadow: var(--shadow); }
        .project-card h3 { margin: 0 0 0.5rem 0; color: var(--color-primary); }
        .project-card .partner { font-size: 0.9rem; font-weight: 600; color: var(--color-text-light); margin-bottom: 1rem; border-top: 1px solid var(--color-border); padding-top: 1rem; margin-top: 1rem; }
        .project-card .date { font-size: 0.8rem; color: #777; }
        .project-card p { flex-grow: 1; color: var(--color-text-light); }
        .project-card a { background: var(--color-primary); color: #fff; text-align: center; padding: 12px; border-radius: 8px; text-decoration: none; font-weight: 600; transition: background-color 0.2s; }
        .project-card a:hover { background: var(--color-accent); }
        .project-card .delete-btn { background: #e55649; color: #fff; border: none; padding: 8px 12px; border-radius: 8px; cursor: pointer; margin-top: 10px; font-weight: 600; }
        .partner-portal { background: var(--color-light-bg); border: 1px solid var(--color-border); border-radius: 12px; padding: 2rem; }
        .partner-portal h2 { color: var(--color-primary); text-align: center; }
        .policy-section { display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; align-items: flex-start; }
        .policy-box { padding: 2rem; border-radius: 12px; background: #fff; border: 2px solid var(--color-border); box-shadow: var(--shadow); }
        .policy-box h3 { color: var(--color-primary); border-bottom: 2px solid var(--color-accent); padding-bottom: 0.5rem; margin-top: 0; }
        .policy-box ul { list-style: none; padding-left: 0; }
        .policy-box li { position: relative; padding-left: 30px; margin-bottom: 1rem; font-weight: 500; }
        .policy-box.commitment-what li::before { content: '✔'; color: #28a745; position: absolute; left: 0; font-size: 1.2rem; font-weight: 700; }
        .policy-box.commitment-role li::before { content: '✖'; color: #dc3545; position: absolute; left: 0; font-size: 1.2rem; font-weight: 700; }
        .policy-box.commitment-role li.positive::before { content: '✔'; color: #28a745; }
        .form-container { max-width: 800px; margin: 0 auto; background: #fff; padding: 2.5rem; border-radius: var(--border-radius); box-shadow: var(--shadow); }
        .form-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; }
        .form-group { margin-bottom: 1.5rem; }
        .form-group.full-width { grid-column: 1 / -1; }
        .form-group label { display: block; font-weight: 600; margin-bottom: 0.5rem; }
        .form-group label small { font-weight: 400; color: #555; }
        .form-group input, .form-group select, .form-group textarea { width: 100%; padding: 12px 16px; border-radius: 12px; border: 1px solid var(--color-border); font-size: 1rem; font-family: inherit; }
        .form-group textarea { min-height: 120px; }
        /* Custom file input */
        .form-group input[type="file"] {
            padding: 10px;
            background: var(--content-bg);
            cursor: pointer;
        }
        .form-button { width: 100%; padding: 1rem; font-size: 1.1rem; }
        .form-button:disabled { background: #ccc; cursor: not-allowed; }
        .form-status { text-align: center; font-weight: 600; font-size: 1.1rem; margin-top: 1.5rem; }
        .compliance-bar { text-align: center; padding: 2rem; background-color: var(--color-light-bg); color: var(--color-text-light); font-style: italic; border-radius: 12px; margin-top: 4rem; }
        .contact-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; align-items: center; }
        .access-denied { padding: 40px; text-align: center; max-width: 700px; margin: 40px auto; background: #fff; border-radius: 12px; box-shadow: var(--shadow); }
        .access-denied h2 { color: var(--color-primary); }
        @media (max-width: 768px) {
            .policy-section, .form-grid, .contact-grid { grid-template-columns: 1fr; }
        }
    </style>

    <main>
        <section class="page-header page-header-community" style="background-image: url('/img/students-paying-attention-class.jpg'); background-size: cover; background-position: center;">
             <div class="hero-overlay"></div>
             <div class="container">
             <div class="hero-content program-header">
             <h1 style="color: #fff;">Work-Readiness Program</h1>
             <p>Gain practical experience, build real-world projects, and get mentored by industry professionals to launch your career in tech.
             </p>
             </div>
             </div>
        </section>
        <section class="section">
             <div class="container">
                <h2 class="section-title text-center">How Our Program Works</h2>
                <div class="how-it-works-grid">
                    <div class="step"><div class="step-icon">1</div><h3>Apply to Join</h3><p>Fill out the application form with your skills and area of interest. We accept students based on passion and commitment.</p></div>
                    <div class="step"><div class="step-icon">2</div><h3>Learn & Build</h3><p>Get access to our online courses and work on real micro-projects from our partners, with guidance from mentors.</p></div>
                    <div class="step"><div class="step-icon">3</div><h3>Get Certified</h3><p>Receive a <strong>Certificate of Completion</strong> and a <strong>Certificate of Practical Experience</strong> to build your CV and portfolio.</p></div>
                </div>
             </div>
        </section>
        <section class="section section-gray">
             <div class="container">
                <h2 class="section-title text-center">Program Tracks</h2>
                <div class="project-grid">
                    <div class="track-card"><h3>Cloud & DevOps</h3><p>Intro to cloud fundamentals, deployment, and cloud-hosted apps. Tools: AWS/GCP basics, Firebase, Docker.</p></div>
                    <div class="track-card"><h3>Data Science & AI</h3><p>Data cleaning, analysis, visualization, and intro to SQL & ML. Tools: Python (pandas), Google Sheets, Power BI.</p></div>
                    <div class="track-card"><h3>RPA (Automation)</h3><p>Low-code automation using Power Platform & RPA tooling, building basic bots and workflow automations.</p></div>
                    <div class="track-card"><h3>Web Development</h3><p>Frontend + backend basics, building responsive sites and SPAs. Tools: Astro/Vite, React, Node.js, Supabase.</p></div>
                </div>
             </div>
        </section>
        <section class="section">
             <div class="container">
                <h2 class="section-title text-center">Available Partner Projects</h2>
                <div class="project-grid" id="project-grid">
                    <p id="loading-projects" style="text-align: center; grid-column: 1 / -1;">Loading available projects...</p>
                </div>
             </div>
        </section>
        <div id="partner-portal" style="display: none;">
             <section class="section section-gray">
                <div class="container partner-portal">
                    <h2 class="section-title text-center">Partner Portal</h2>
                    <div class="form-container" style="max-width: 1000px; margin-bottom: 3rem;">
                        <h3>Post a New Project</h3>
                        <form id="post-project-form"></form>
                    </div>
                    <h3>My Posted Projects</h3>
                    <div class="project-grid" id="my-projects-list">
                        <p id="loading-my-projects"></p>
                    </div>
                </div>
             </section>
        </div>
        <section class="section">
            <div class="container">
                </div>
        </section>

        <section class="section section-gray" id="apply">
            <div class="container">
                <h2 class="section-title text-center">Student Application Form</h2>

                <div id="login-prompt-for-form" class="access-denied">
                    <h2>Please Log In to Apply</h2>
                    <p>You must be logged in to apply for our work-readiness program. This allows you to securely upload your documents.</p>
                    <a href="/login?redirect=/work-readiness#apply" class="button primary">Log In / Sign Up</a>
                </div>

                <div class="form-container" id="form-wrapper" style="display: none;">
                  <p style="text-align: center; margin-top: -1rem; margin-bottom: 2rem; color: #666;">
    Applying as: <strong id="user-email-display" style="color: var(--color-primary);">Loading...</strong>
</p>
                    <form id="intern-form">
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="phone">Phone / WhatsApp*</label>
                                <input type="tel" id="phone" required>
                            </div>
                            <div class="form-group">
                                <label for="institution">Study Institution (if any)</label>
                                <input type="text" id="institution" placeholder="e.g., University of Johannesburg">
                            </div>
                            <div class="form-group full-width">
                                <label for="track">Area of Interest*</label>
                                <select id="track" required>
                                    <option value="" disabled selected>-- Select a program track --</option>
                                    <option value="Youth Program">Youth Program</option>
                                    <option value="Drone Operations & Aerial Analytics">Drone Operations & Aerial Analytics</option>
                                    <option value="Call Centre Digital Skills">Call Centre Digital Skills</option>
                                    <option value="Business & Marketing">Business & Marketing</option>
                                </select>
                            </div>
                            <div class="form-group full-width">
                                <label for="why-join">Why do you want to join this program?*</label>
                                <textarea id="why-join" rows="5" placeholder="Tell us about your passion for tech..." required></textarea>
                            </div>
                            <div class="form-group">
                                <label for="cv-file">Upload your CV (PDF)*</label>
                                <input type="file" id="cv-file" accept=".pdf" required>
                            </div>
                            <div class="form-group">
                                <label for="matric-file">Upload Matric Certificate (PDF)*</label>
                                <input type="file" id="matric-file" accept=".pdf" required>
                            </div>
                            <div class="form-group full-width">
                                <label for="linkedin-link">LinkedIn Profile <small>(Optional)</small></label>
                                <input type="url" id="linkedin-link" placeholder="httpsA://linkedin.com/in/...">
                            </div>
                        </div>
                        <button type="submit" class="button primary form-button" id="submit-button">Submit Application</button>
                        <p id="form-status" class="form-status"></p>
                    </form>
                </div>
            </div>
        </section>
        
        </main>

    <script>
        import { supabase } from '../supabaseClient.js';
        
        let currentUser = null;

        // --- 1. Load Public Projects (Unchanged) ---
        async function loadPublicProjects() {
            const grid = document.getElementById('project-grid');
            const { data, error } = await supabase
                .from('projects').select(`*, profiles ( full_name, organization )`)
                .eq('is_open', true).order('created_at', { ascending: false });
            if (error) { grid.innerHTML = '<p>Error loading projects.</p>'; return; }
            if (data.length === 0) { grid.innerHTML = '<p style="text-align: center; grid-column: 1 / -1;">No open projects are available right now.</p>'; return; }

            grid.innerHTML = '';
            for (const project of data) {
                const card = document.createElement('div');
                card.className = 'project-card';
                const date = new Date(project.created_at).toLocaleDateString('en-ZA');
                const partnerName = project.profiles?.full_name || project.stakeholder_name;
                card.innerHTML = `
                    <h3>${project.title}</h3>
                    <p>${project.description}</p>
                    <span class="date">Posted on: ${date}</span>
                    <span class="partner">Partner: <strong>${partnerName}</strong></span>
                    <a href="/my-courses/submit-project?id=${project.id}">View & Submit</a>
                `;
                grid.appendChild(card);
            }
        }
        
        // --- 2. Check for Partner Role (Unchanged) ---
        async function checkUserRole(user) {
            const { data: profile, error } = await supabase
                .from('profiles').select('is_partner, full_name, organization')
                .eq('id', user.id).single();
            if (profile && profile.is_partner) {
                document.getElementById('partner-portal').style.display = 'block';
                loadPartnerProjects(user.id, profile.organization || profile.full_name);
            }
        }
        
        // --- 3. Load Partner-Specific Projects (Unchanged) ---
        async function loadPartnerProjects(userId, stakeholderName) {
            // ... (Same as before, finds and lists projects, adds delete buttons)
        }
        
        // --- 4. Handle New Project Submission (Unchanged) ---
        const projectForm = document.getElementById('post-project-form');
        if (projectForm) {
            projectForm.addEventListener('submit', async (e) => {
                // ... (Same as before, posts a new project)
            });
        }
        
        // --- 5. NEW: Application Form Auth & Submission ---
        const internForm = document.getElementById('intern-form');
        const loginPromptEl = document.getElementById('login-prompt-for-form');
        const formWrapperEl = document.getElementById('form-wrapper');

        // Check login status to decide which form to show
        supabase.auth.onAuthStateChange(async (event, session) => {
            if (session && session.user) {
                // USER IS LOGGED IN
                currentUser = session.user;
                loginPromptEl.style.display = 'none';
                formWrapperEl.style.display = 'block';
               const displayName = currentUser.user_metadata.full_name || currentUser.email;
            document.getElementById('user-email-display').textContent = displayName;
            
            checkUserRole(currentUser); 
        } else {
            loginPromptEl.style.display = 'block';
            formWrapperEl.style.display = 'none';
        }
        });

        // Handle the new application form submission
        internForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            if (!currentUser) {
                alert('Session expired. Please log in again.');
                return;
            }

            const button = document.getElementById('submit-button');
            const statusEl = document.getElementById('form-status');
            button.disabled = true;
            button.textContent = 'Uploading files...';
            statusEl.textContent = '';

            try {
                // --- 1. Get files & create unique paths ---
                const cvFile = document.getElementById('cv-file').files[0];
                const matricFile = document.getElementById('matric-file').files[0];
                const cvPath = `${currentUser.id}/${cvFile.name}`;
                const matricPath = `${currentUser.id}/${matricFile.name}`;
                
                // --- 2. Upload CV ---
                const { error: cvError } = await supabase.storage
                    .from('application_uploads')
                    .upload(cvPath, cvFile, { upsert: true }); // upsert = true overwrites
                if (cvError) throw cvError;
                
                // --- 3. Upload Matric Certificate ---
                button.textContent = 'Uploading certificate...';
                const { error: matricError } = await supabase.storage
                    .from('application_uploads')
                    .upload(matricPath, matricFile, { upsert: true });
                if (matricError) throw matricError;

                // --- 4. Get Public URLs ---
                const { data: cvUrlData } = supabase.storage
                    .from('application_uploads').getPublicUrl(cvPath);
                const { data: matricUrlData } = supabase.storage
                    .from('application_uploads').getPublicUrl(matricPath);

                // --- 5. Save all data to the 'student_applications' table ---
                button.textContent = 'Saving application...';
                const { error: insertError } = await supabase.from('student_applications').insert({
                    user_id: currentUser.id,
                    full_name: currentUser.user_metadata.full_name, // Get name from auth
                    email: currentUser.email, // Get email from auth
                    phone: document.getElementById('phone').value,
                    institution: document.getElementById('institution').value,
                    track: document.getElementById('track').value,
                    why_join: document.getElementById('why-join').value,
                    linkedin_url: document.getElementById('linkedin-link').value,
                    cv_url: cvUrlData.publicUrl,
                    matric_cert_url: matricUrlData.publicUrl
                });
                if (insertError) throw insertError;
                
                // --- 6. Success! ---
                statusEl.textContent = 'Success! Your application is submitted.';
                statusEl.style.color = '#28a745';
                internForm.reset();

            } catch (error) {
                console.error('Error submitting application:', error);
                statusEl.textContent = `Error: ${error.message}`;
                statusEl.style.color = '#e55649';
            } finally {
                button.disabled = false;
                button.textContent = 'Submit Application';
            }
        });

        // --- Run on page load ---
        loadPublicProjects();
        // checkUserRole() is now handled by the onAuthStateChange listener
    </script>
</BaseLayout>
