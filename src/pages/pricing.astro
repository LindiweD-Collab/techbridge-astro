---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Pricing">
    <main>
        <section class="page-header page-header-pricing">
            <div class="hero-overlay"></div>
            <div class="container">
                <div class="hero-content" style="max-width: 100%; text-align: center;">
                    <h1>Training & Development Pricing</h1>
                    <p>Affordable, powerful training solutions designed to upskill your students and employees for the future.</p>
                </div>
            </div>
        </section>

        <section id="schools" class="section">
            <div class="container">
                <h2 class="section-title text-center">For Schools & Educational Institutions</h2>
                <div class="pricing-grid">
                    <div class="pricing-card">
                        <h3>Digital Literacy Foundation</h3>
                        <p class="price">R 5000 <span>/ workshop series</span></p>
                        <p class="card-description">Equip your students with the essential digital skills for modern learning.</p>
                        <ul class="features-list">
                            <li>Basic Computer Skills Workshop</li>
                            <li>Microsoft Office Suite Training</li>
                            <li>Safe Internet Browsing Module</li>
                            <li>For up to 30 learners</li>
                        </ul>
                        <a href="/contact" class="button secondary">Get Started</a>
                    </div>
                    <div class="pricing-card highlighted">
                        <span class="highlight-tag">Most Popular</span>
                        <h3>Future Skills Program</h3>
                        <p class="price">R 12,000 <span>/ term</span></p>
                        <p class="card-description">Go beyond the basics with career-focused tech workshops for students and teachers.</p>
                        <ul class="features-list">
                            <li>Includes Digital Literacy Foundation</li>
                            <li>Intro to Web Development or Cybersecurity</li>
                            <li>Teacher Training (Microsoft/Google Tools)</li>
                            <li>For up to 50 learners & staff</li>
                        </ul>
                        <a href="/contact" class="button primary">Get Started</a>
                    </div>
                    <div class="pricing-card">
                        <h3>Innovation Partner</h3>
                        <p class="price">Custom <span>quote</span></p>
                        <p class="card-description">A complete digital skills transformation program for your entire institution.</p>
                        <ul class="features-list">
                            <li>Custom Student Career Pathways</li>
                            <li>Ongoing Teacher Professional Development</li>
                            <li>Executive Leadership Training for Management</li>
                            <li>Dedicated Program Coordinator</li>
                        </ul>
                        <a href="/quote" class="button secondary">Request a Quote</a>
                    </div>
                </div>
            </div>
        </section>

        <section id="smes" class="section section-gray">
            <div class="container">
                <h2 class="section-title text-center">For Small & Medium Enterprises</h2>
                <div class="pricing-grid">
                    <div class="pricing-card">
                        <h3>Business Essentials</h3>
                        <p class="price">R 500 <span>/ month</span></p>
                        <p class="card-description">Upskill your team with foundational business and digital skills.</p>
                        <ul class="features-list">
                            <li>Digital Marketing & SEO Course Access</li>
                            <li>Microsoft Office Suite Training</li>
                            <li>Financial Literacy Workshop</li>
                            <li>Up to 5 team members</li>
                        </ul>
                        <a href="/contact" class="button secondary">Get Started</a>
                    </div>
                    <div class="pricing-card highlighted">
                        <span class="highlight-tag">Best Value</span>
                        <h3>Growth Accelerator</h3>
                        <p class="price">R 1,200 <span>/ month</span></p>
                        <p class="card-description">Drive growth with advanced training in management, sales, and project delivery.</p>
                        <ul class="features-list">
                            <li>Everything in Business Essentials</li>
                            <li>Business Management Essentials</li>
                            <li>Agile Project Management (PMP Intro)</li>
                            <li>Up to 15 team members</li>
                        </ul>
                        <a href="/contact" class="button primary">Get Started</a>
                    </div>
                    <div class="pricing-card">
                        <h3>Tech Transformation</h3>
                        <p class="price">Custom <span>quote</span></p>
                        <p class="card-description">A strategic partner to embed automation and advanced tech skills in your business.</p>
                        <ul class="features-list">
                            <li>Everything in Growth Accelerator</li>
                            <li>Custom Automation (RPA) Training</li>
                            <li>Cloud Computing & DevOps for Tech Teams</li>
                            <li>Custom Training Strategy</li>
                        </ul>
                        <a href="/quote" class="button secondary">Request a Quote</a>
                    </div>
                </div>
            </div>
        </section>
    </main>
</BaseLayout>